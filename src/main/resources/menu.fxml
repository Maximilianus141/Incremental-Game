<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.Group?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dev.cowycorn.incrgame.MenuController"
            prefHeight="600" prefWidth="800">

    <center>
        <VBox alignment="CENTER" spacing="15">

            <VBox alignment="CENTER" spacing="5">
                <Label fx:id="title" text="GAME TITLE" style="-fx-font-size: 48px; -fx-font-weight: bold;"/>
                <Label text="random statistic" style="-fx-text-fill: grey;"/>
                <padding>
                    <Insets bottom="40"/> </padding>
            </VBox>

            <StackPane>
                <Button fx:id="playButton" text="PLAY" onAction="#playButton"
                        prefWidth="200" prefHeight="40"/>

                <Label text="Earnings +100#"
                       style="-fx-border-color: black; -fx-padding: 5;"
                       translateX="200"/>
            </StackPane>

            <Button fx:id="loadButton" text="LOAD" onAction="#loadButton" prefWidth="200" prefHeight="40"/>

            <StackPane alignment="CENTER_LEFT" maxWidth="280">

                <Group translateX="-180" managed="false">

                    <VBox fx:id="settingsPanel"
                          visible="false"
                          spacing="5"
                          minWidth="160"
                          prefWidth="160"
                          style="-fx-border-color: grey; -fx-border-style: dashed; -fx-padding: 10; -fx-background-color: #f4f4f4;">

                        <Label text="Notation" style="-fx-font-size: 10px;"/>

                        <ComboBox fx:id="notationCombo" minWidth="140" maxWidth="140"/>

                        <Label text="Auto-save interval" style="-fx-font-size: 10px;"/>
                        <ComboBox fx:id="autoSaveCombo" minWidth="140" maxWidth="140"/>

                    </VBox>
                </Group>

                <Button fx:id="settingsButton" text="SETTINGS" onAction="#toggleSettings"
                        prefWidth="200" prefHeight="40"/>

            </StackPane>

            <Button fx:id="exitButton" text="EXIT" onAction="#exitButton" prefWidth="200" prefHeight="40"/>

        </VBox>
    </center>

    <bottom>
        <AnchorPane>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>

            <Label text="v0.0.0A" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"/>

            <Button text="Credits" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0"/>
        </AnchorPane>
    </bottom>

</BorderPane>