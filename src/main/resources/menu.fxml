<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dev.cowycorn.incrgame.MenuController"
            prefHeight="600" prefWidth="800">

    <center>
        <VBox alignment="CENTER" spacing="15">

            <VBox alignment="CENTER" spacing="5">
                <Label fx:id="title" text="GAME TITLE" style="-fx-font-size: 48px; -fx-font-weight: bold;"/>
                <Label text="random statistic" style="-fx-text-fill: grey;"/>
                <padding>
                    <Insets bottom="40"/> </padding>
            </VBox>

            <StackPane>
                <Button fx:id="playButton" text="PLAY" onAction="#playButton"
                        prefWidth="200" prefHeight="40"/>

                <Label text="Earnings +100#"
                       style="-fx-border-color: black; -fx-padding: 5;"
                       translateX="200"/>
            </StackPane>

            <Button fx:id="loadButton" text="LOAD" onAction="#loadButton" prefWidth="200" prefHeight="40"/>

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="settingsButton" text="SETTINGS" onAction="#settingsButton" prefWidth="200" prefHeight="40"/>
            </HBox>

            <Button fx:id="exitButton" text="EXIT" onAction="#exitButton" prefWidth="200" prefHeight="40"/>

        </VBox>
    </center>

    <bottom>
        <AnchorPane>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>

            <Label text="v0.0.0A" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"/>

            <Button text="Credits" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0"/>
        </AnchorPane>
    </bottom>

</BorderPane>